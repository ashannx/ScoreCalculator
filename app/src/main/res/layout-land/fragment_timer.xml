<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".TimerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/b_addHours"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/rounded_corners_button"
                app:srcCompat="@drawable/ic_baseline_add_48" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:background="@drawable/rounded_corners_et"
                android:orientation="vertical"
                android:padding="0dp">

                <TextView
                    android:id="@+id/t_Timerhours"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="00"
                    android:textSize="26sp"
                    app:autoSizeMaxTextSize="26sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/hour"
                    android:textSize="18sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/b_subHours"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/rounded_corners_button"
                app:srcCompat="@drawable/ic_baseline_remove_48" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/b_addMins"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/rounded_corners_button"
                app:srcCompat="@drawable/ic_baseline_add_48" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:background="@drawable/rounded_corners_et"
                android:orientation="vertical"
                android:padding="0dp">

                <TextView
                    android:id="@+id/t_timerMins"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="00"
                    android:textSize="26sp"
                    app:autoSizeMaxTextSize="26sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/min"
                    android:textSize="18sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/b_subMins"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/rounded_corners_button"
                app:srcCompat="@drawable/ic_baseline_remove_48" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/b_addSec"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/rounded_corners_button"
                app:srcCompat="@drawable/ic_baseline_add_48" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:background="@drawable/rounded_corners_et"
                android:orientation="vertical"
                android:paddingStart="0dp"
                android:paddingTop="0dp"
                android:paddingEnd="0dp"
                android:paddingBottom="0dp">

                <TextView
                    android:id="@+id/t_timerSecs"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="00"
                    android:textSize="26sp"
                    app:autoSizeMaxTextSize="26sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/sec"
                    android:textSize="18sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/b_subSecs"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/rounded_corners_button"
                app:srcCompat="@drawable/ic_baseline_remove_48" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/b_resetTimer"
                style="@style/secondaryButtonSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_dark"
                android:insetTop="0dp"
                android:text="@string/b_reset" />

            <Button
                android:id="@+id/b_startTimer"
                style="@style/secondaryButtonSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:insetBottom="0dp"
                android:text="@string/b_start" />

            <Button
                android:id="@+id/b_stopTimer"
                style="@style/secondaryButtonSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_dark"
                android:insetBottom="0dp"
                android:text="@string/b_stop"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>