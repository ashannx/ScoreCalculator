<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:padding="30dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:maxHeight="100dp"
            android:minHeight="100dp"
            app:srcCompat="@drawable/scorecard_icon" />

        <TextView
            android:id="@+id/t_hometitle2"
            style="@style/h1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/app_name"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/t_hometitle3"
            style="@style/h3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/subTitleMain" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/b_scorekeep"
            style="@style/primaryButtonSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mainButton1" />

        <Button
            android:id="@+id/b_timer"
            style="@style/secondaryButtonSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mainButton2" />

        <Button
            android:id="@+id/b_dice"
            style="@style/tertiaryButtonSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mainButton3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/b_chat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners_button"
                app:srcCompat="@drawable/feedback_icon" />

            <ImageButton
                android:id="@+id/b_help"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners_button"
                app:srcCompat="@drawable/ic_baseline_question_mark_40" />

            <ImageButton
                android:id="@+id/b_settings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners_button"
                app:srcCompat="@drawable/ic_baseline_settings_40" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>