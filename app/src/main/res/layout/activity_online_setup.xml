<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".OnlineSetupActivity">

    <TextView
        android:id="@+id/t_hometitle2"
        style="@style/h2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/ethint_enterName" />

    <EditText
        android:id="@+id/et_playerNameOL"
        style="@style/et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:capitalize="characters"
        android:ems="10"
        android:hint="@string/hint_username"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textAllCaps="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/b_startOL"
            style="@style/primaryButtonSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/b_startOL" />

        <Button
            android:id="@+id/b_joinOL"
            style="@style/secondaryButtonSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/b_joinOL" />
    </LinearLayout>

</LinearLayout>