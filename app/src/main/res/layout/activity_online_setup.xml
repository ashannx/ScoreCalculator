<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".OnlineSetupActivity">

    <TextView
        android:id="@+id/t_enterRoomCode"
        style="@style/h2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Choose an option:"
        android:textSize="40sp" />

    <Button
        android:id="@+id/b_startOL"
        style="@style/primaryButtonSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/b_startOL" />

    <Button
        android:id="@+id/b_joinOL"
        style="@style/secondaryButtonSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="@string/b_joinOL" />

</LinearLayout>