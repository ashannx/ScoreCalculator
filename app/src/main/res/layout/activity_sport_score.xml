<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:orientation="vertical"
    tools:context=".SportScoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/orange">

        <LinearLayout
            android:id="@+id/layout_teamL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10sp">

            <TextView
                android:id="@+id/t_teamL"
                style="@style/h2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:text="Team" />

            <TextView
                android:id="@+id/t_teamLScore"
                style="@style/h1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:background="@color/pink"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:text="11"
                android:textSize="150sp"
                app:autoSizeMaxTextSize="150sp"
                app:autoSizeTextType="uniform" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_addL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:backgroundTint="@color/pink_light"
                    app:srcCompat="@drawable/ic_baseline_add_48" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_minusL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:backgroundTint="@color/pink_light"
                    app:srcCompat="@drawable/ic_baseline_remove_48" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_teamR"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue_dark"
            android:orientation="vertical"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:paddingBottom="10sp">

            <TextView
                android:id="@+id/t_teamR"
                style="@style/h2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:background="@color/blue_dark"
                android:text="Team" />

            <TextView
                android:id="@+id/t_teamRScore"
                style="@style/h1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:background="@color/blue_dark"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:text="11"
                android:textSize="150sp"
                app:autoSizeMaxTextSize="150sp"
                app:autoSizeTextType="uniform" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue_dark"
                android:gravity="center">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_addR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:backgroundTint="@color/blue"
                    app:srcCompat="@drawable/ic_baseline_add_60" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_minusR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:backgroundTint="@color/blue"
                    app:srcCompat="@drawable/ic_baseline_remove_48" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/b_endGameScore"
        style="@style/secondaryButtonSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/orange"
        android:paddingLeft="12dp"
        android:paddingTop="5dp"
        android:paddingRight="12dp"
        android:paddingBottom="5dp"
        android:shadowColor="@color/transparent"
        android:stateListAnimator="@null"
        android:text="End Game"
        android:textColor="@color/white" />

</LinearLayout>