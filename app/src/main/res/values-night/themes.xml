<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CardScoreCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_dark</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/pink</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/pink_dark</item>
        <item name="materialButtonStyle">@style/primaryButtonSmall</item>
        <item name="floatingActionButtonStyle">@style/fab</item>
        <item name="editTextStyle">@style/et_filled</item>
        <item name="imageButtonStyle">@style/imageButton</item>

        <item name="colorAccent">@color/pink</item>
        <item name="colorSurface">@color/pink</item>
        <item name="colorOnSurface">@color/pink_light</item>

        <item name="android:textViewStyle">@style/h3</item>
        <item name="textAppearanceButton">@style/tabsAppearance</item>

    </style>

    <style name="primaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
<!--        <item name="android:paddingBottom">12dp</item>-->
<!--        <item name="android:paddingTop">12dp</item>-->
<!--        <item name="android:paddingLeft">40dp</item>-->
<!--        <item name="android:paddingRight">40dp</item>-->
<!--        <item name="android:textSize">24sp</item>-->
<!--        <item name="android:letterSpacing">0.1</item>-->
        <item name="backgroundTint">@color/orange_dark</item>
<!--        <item name="android:textStyle">bold</item>-->
    </style>


    <style name="secondaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue_dark</item>
        <item name="android:textColor">@color/white</item>
<!--        <item name="android:paddingBottom">12dp</item>-->
<!--        <item name="android:paddingTop">12dp</item>-->
<!--        <item name="strokeColor">@color/transparent</item>-->
    </style>

    <style name="tertiaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue_darker</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="strokeColor">@color/transparent</item>
    </style>

    <style name="imageButton" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@color/orange_dark</item>
    </style>

    <!-- Floating Action Buttons -->
    <style name="fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/orange_dark</item>
    </style>

    <style name="fab_transparent" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/pink_dark</item>
        <item name="android:elevation">0dp</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="et_filled" parent="Widget.AppCompat.EditText">
<!--        <item name="android:textColor">@color/white</item>-->
        <item name="android:textColorHint">#CAFFFFFF</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/et_selector_darkmode</item>
    </style>

    <style name="dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/pink_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>